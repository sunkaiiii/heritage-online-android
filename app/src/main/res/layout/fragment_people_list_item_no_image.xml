<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/people_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/general_collection_unflag" />

        <TextView
            android:id="@+id/people_main_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@id/people_collect"
            android:textColor="@color/people_list_item_text_color"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="后人会议" />

        <TextView
            android:id="@+id/people_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/people_main_title"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@id/people_collect"
            android:textColor="@color/people_list_item_text_color"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="他很不错" />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>